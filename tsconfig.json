{
  "include": ["src", "global.d.ts"],
  "exclude": ["tests"],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2018",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "importHelpers": true,
    "strictNullChecks": true
  }
}
